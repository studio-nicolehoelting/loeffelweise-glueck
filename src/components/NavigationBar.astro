---
interface Props {
    active: string;
}

const menu = [
    ["/", "willkommen."],
    ["/rezepte", "rezepte."],
    ["/geschichten", "geschichten."],
    ["/nicole_jette", "nicole & jette."],
    ["/loeffelfreunde", "löffelfreu(n)de"],
    ["/leseglueck", "leseglück."],
];
const { active } = Astro.props;
---

<nav id="navbar">
    {
        menu.map((el) => {
            let href = el[0].length > 1 ? el[0] + "/" : el[0];
            if (el[0] === active) return <h1 class="active">{el[1]}</h1>;
            else
                return (
                    <a href={href} class="inactive">
                        {el[1]}
                    </a>
                );
        })
    }
</nav>

<style lang="scss">
    #navbar {
        display: flex;
        justify-content: space-evenly;
        width: 90%;
        margin: 0 auto;
        margin-top: 2vh;

        @media (max-width: $mobile_max_width) {
            width: 90%;
            justify-content: center;
            align-items: center;
            flex-wrap: wrap;
            padding: 3vmin 0.5vmin;
            background-color: $pappe;
        }
    }

    .active,
    .inactive {
        font-family: "TrashHand";
        text-decoration: none;
        transition: color 0.2s;
        font-size: 1.3rem;
        font-family: "TrashHand";

        @media (max-width: $mobile_max_width) {
            text-align: center;
            width: fit-content;
            max-width: 100%;
            font-size: 3rem;
            padding: 0.5vmin 2vmin;
            margin: 0.5vmin;
            border: 4px solid var(--border-color);
        }
        @media (max-width: calc($mobile_max_width * 0.75)) {
            font-size: 2rem;
        }
    }

    .active {
        color: $active;
        font-weight: normal;

        @media (max-width: $mobile_max_width) {
            --border-color: #{darken($active, 15%)};
            color: $background;
        }
    }

    .inactive {
        color: $pappe;

        @media (max-width: $mobile_max_width) {
            --border-color: #{$background};
            color: $background;
        }

        &:hover {
            color: $pappe_darken;

            @media (max-width: $mobile_max_width) {
                color: darken($background, 50%);
            }
        }
    }
</style>
