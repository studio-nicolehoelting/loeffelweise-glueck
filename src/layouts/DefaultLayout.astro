---
import { ViewTransitions } from "astro:transitions";
import Base from "./Base.astro";
import NavigationBar from "../components/NavigationBar.astro";
import Footer from "../components/Footer.astro";
import PwaReloadPrompt from "@components/PwaReloadPrompt.astro";

interface Props {
    title: string;
    activePage: string;
    buttonToTop?: boolean;
}

const { title, activePage, buttonToTop } = Astro.props;
---

<Base title={title} pwaMinimal={false}>
    <ViewTransitions slot="head" />
    <slot name="head" slot="head" />
    <slot name="before-navbar" />
    <NavigationBar active={activePage} />
    <slot />
    <PwaReloadPrompt />
    <Footer buttonToTop={buttonToTop} />
</Base>
